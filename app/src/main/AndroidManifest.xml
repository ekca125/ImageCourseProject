<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trainer.courserunner">

    <application
        android:name=".rooms.AppDatabaseLoader"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseRunner">
        <activity android:name=".SoundSetActivity"></activity>
        <activity android:name=".UserSetActivity" />
        <activity android:name=".ProjectRunningActivity" />
        <activity android:name=".NormalRunningActivity">

        </activity>
        <activity android:name=".MissionActivity" />
        <activity android:name=".ResultActivity" />
        <activity android:name=".RunningActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".course.CourseGuideActivity"></activity>

        <!-- 네이버 지도 API 키 설정 -->
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="hzqct6qd8n" />
        <activity android:name=".SignupActivity" />

    </application>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>